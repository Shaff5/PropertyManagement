@using PropertyManagement.Domain
@using PropertyManagement.Ui.Mvc.Models.FastFind

@model FastFindViewModel
@{
    ViewData["Title"] = "FastFind";
}

<form>
    <h4>Buildings</h4>
    <table class='table'>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>Zip Code</th>
                <th>Purchase Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var building in Model.Buildings)
            {
                <tr>
                    <td>@building.BuildingId</td>
                    <td>@building.BuildingName</td>
                    <td>@building.AddressLine1</td>
                    <td>@building.City</td>
                    <td>@building.ZipCode</td>
                    <td>@building.PurchaseDate.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id=@building.BuildingId>
                            <i class="fa fa-edit"></i>
                        </a>
                        <a class="btn btn-warning delete"
                           data-id="@building.BuildingId"
                           data-controller="Building"
                           data-action="Delete"
                           data-body-message="Are you sure you want to delete this building?">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Units</h4>
    <table class='table'>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Building Name</th>
                <th>Square Footage</th>
                <th>Bedrooms</th>
                <th>Bathrooms</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var unit in Model.Units)
            {
                <tr>
                    <td>@unit.UnitId</td>
                    <td>@unit.UnitName</td>
                    <td>@unit.BuildingName</td>
                    <td>@unit.SquareFootage</td>
                    <td>@unit.NumberOfBedrooms</td>
                    <td>@unit.NumberOfBathrooms</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id=@unit.UnitId>
                            <i class="fa fa-edit"></i>
                        </a>
                        <a class="btn btn-warning delete"
                           data-id="@unit.UnitId"
                           data-controller="Unit"
                           data-action="Delete"
                           data-body-message="Are you sure you want to delete this unit?">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
