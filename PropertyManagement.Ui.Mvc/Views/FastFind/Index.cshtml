@using PropertyManagement.Domain
@using PropertyManagement.Ui.Mvc.Models.FastFind

@model FastFindViewModel
@{
    ViewData["Title"] = "FastFind";
}

<form>
    <h4>Buildings</h4>
    <div class="table-responsive">
        <table class='table'>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>Zip Code</th>
                    <th>Purchase Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var building in Model.Buildings)
                {
                    <tr>
                        <td class="text-nowrap">@building.BuildingId</td>
                        <td class="text-nowrap">@building.BuildingName</td>
                        <td class="text-nowrap">@building.AddressLine1</td>
                        <td class="text-nowrap">@building.City</td>
                        <td class="text-nowrap">@building.ZipCode</td>
                        <td class="text-nowrap">@building.PurchaseDate.ToShortDateString()</td>
                        <td class="btn-group">
                            <a class="btn btn-primary mr-2" asp-action="Edit" asp-route-id=@building.BuildingId>
                                <i class="fa fa-edit"></i>
                            </a>
                            <a class="btn btn-warning delete"
                               data-id="@building.BuildingId"
                               data-controller="Building"
                               data-action="Delete"
                               data-body-message="Are you sure you want to delete this building?">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <h4>Units</h4>
    <div class="table-responsive">
        <table class='table'>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Building Name</th>
                    <th>Square Footage</th>
                    <th>Bedrooms</th>
                    <th>Bathrooms</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unit in Model.Units)
                {
                    <tr>
                        <td class="text-nowrap">@unit.UnitId</td>
                        <td class="text-nowrap">@unit.UnitName</td>
                        <td class="text-nowrap">@unit.BuildingName</td>
                        <td class="text-nowrap">@unit.SquareFootage</td>
                        <td class="text-nowrap">@unit.NumberOfBedrooms</td>
                        <td class="text-nowrap">@unit.NumberOfBathrooms</td>
                        <td class="btn-group">
                            <a class="btn btn-primary mr-2" asp-action="Edit" asp-route-id=@unit.UnitId>
                                <i class="fa fa-edit"></i>
                            </a>
                            <a class="btn btn-warning delete"
                               data-id="@unit.UnitId"
                               data-controller="Unit"
                               data-action="Delete"
                               data-body-message="Are you sure you want to delete this unit?">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
