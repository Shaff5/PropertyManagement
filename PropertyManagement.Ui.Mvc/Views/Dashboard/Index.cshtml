@{
    ViewData["Title"] = "Dashboard";
}

<div class="row" style="height:100%;">
    <div id="chart-container" class="col h-50 w-50" style="background-color:red;">Column 1</div>
    <div class="col h-50 w-50" style="background-color:green;">Column 2</div>
    <div class="w-100"></div>
    <div class="col h-50 w-50" style="background-color:green;">Column 3</div>
    <div class="col h-50 w-50" style="background-color:red;">Column 4</div>
</div>

@section scripts
    {
    <script type="text/javascript" src="~/lib/fusioncharts/js/fusioncharts.js"></script>
    <script type="text/javascript" src="~/lib/fusioncharts/js/themes/fusioncharts.theme.ocean.js"></script>

    <script>
        $('#menuDashboard').addClass("active");

        $(function () {

            var chartInstance = new FusionCharts(@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model) as String))
            chartInstance.render("chart-container");
        });
    </script>
}


