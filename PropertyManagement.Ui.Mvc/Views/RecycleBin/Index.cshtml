@using PropertyManagement.Ui.Mvc.Models.RecycleBin

@model IEnumerable<RecycleBinViewModel>
@{
    Layout = "_LayoutModal";
    ViewData["Title"] = "Recycle Bin";
}

<form>
    <table class='table'>
        <thead>
            <tr>
                <th>Entity</th>
                <th>Description</th>
                <th>Deleted By</th>
                <th>Deleted On</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entity in Model)
            {
                <tr>
                    <td>@entity.EntityName</td>
                    <td>@entity.Description</td>
                    <td>@entity.DeletedBy</td>
                    <td>@entity.DeletedOn</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Restore" asp-route-id=@entity.Id>
                            Restore
                        </a>
                        <button class="btn btn-danger" asp-action="Delete" asp-route-id=@entity.Id>
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

<button type="button" id="btnClose" class="btn btn-primary button button4">
    Close
</button>

@section scripts
    {
    <script>
        $(function () {
            $("#btnClose").click(function () {
                $('#myModal').modal('hide');
            });
        });
    </script>
}