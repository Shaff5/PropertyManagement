@using PropertyManagement.Domain

@model IEnumerable<Building>
@{
    ViewData["Title"] = "Buildings";
}

<h1>@ViewData["Title"]</h1>

<form>
    <div class="row">
        <div class="col-xs-12">
            <button class="btn" asp-action="Edit">
                Add Building
            </button>
        </div>
    </div>

    <table class='table'>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>Zip Code</th>
                <th>Purchase Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var building in Model)
            {
                <tr>
                    <td>@building.BuildingId</td>
                    <td>@building.BuildingName</td>
                    <td>@building.AddressLine1</td>
                    <td>@building.City</td>
                    <td>@building.ZipCode</td>
                    <td>@building.PurchaseDate.ToShortDateString()</td>
                    <td>
                        <button class="btn btn-primary" asp-action="Edit" asp-route-id=@building.BuildingId>
                            <i class="fa fa-edit"></i>
                        </button>
                        <button class="btn btn-default" asp-action="Delete" asp-route-id=@building.BuildingId>
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
