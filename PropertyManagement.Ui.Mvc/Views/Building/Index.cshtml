@using PropertyManagement.Domain

@model IEnumerable<Building>
@{
    ViewData["Title"] = "Buildings";
}

<form>
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-xs-12">
            <button class="btn" asp-action="Edit">
                Add Building
            </button>
        </div>
        <button type="button" id="btnRecycleBin" class="btn">
            Recycle Bin
        </button>
        <a class="btn" asp-action="Download">
            Download
        </a>
    </div>

    <div class="table-responsive">
        <table class='table'>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>Zip Code</th>
                    <th>Purchase Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var building in Model)
                {
                    <tr>
                        <td>@building.BuildingId</td>
                        <td class="text-nowrap">@building.BuildingName</td>
                        <td class="text-nowrap">@building.AddressLine1</td>
                        <td class="text-nowrap">@building.City</td>
                        <td class="text-nowrap">@building.ZipCode</td>
                        <td class="text-nowrap">@building.PurchaseDate.ToShortDateString()</td>
                        <td class="btn-group">
                            <a class="btn btn-primary mr-2" asp-action="Edit" asp-route-id=@building.BuildingId>
                                <i class="fa fa-edit"></i>
                            </a>
                            <a class="btn btn-primary delete"
                               href="#"
                               data-id="@building.BuildingId"
                               data-controller="Building"
                               data-action="Delete"
                               data-body-message="Are you sure you want to delete this building?">
                                <i class="fa fa-trash delete"
                                   data-id="@building.BuildingId"
                                   data-controller="Building"
                                   data-action="Delete"
                                   data-body-message="Are you sure you want to delete this building?">
                                </i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
