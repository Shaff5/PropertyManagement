@using PropertyManagement.Domain

@model IEnumerable<Building>
@{
    ViewData["Title"] = "Buildings";
}

<form>
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-xs-12">
            <button class="btn" asp-action="Edit">
                Add Building
            </button>
        </div>
        <button type="button" id="btnRecycleBin" class="btn">
            Recycle Bin
        </button>
        <a class="btn" asp-action="Download">
            Download
        </a>
    </div>

    <table class='table'>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>Zip Code</th>
                <th>Purchase Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var building in Model)
            {
                <tr>
                    <td>@building.BuildingId</td>
                    <td>@building.BuildingName</td>
                    <td>@building.AddressLine1</td>
                    <td>@building.City</td>
                    <td>@building.ZipCode</td>
                    <td>@building.PurchaseDate.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id=@building.BuildingId>
                            <i class="fa fa-edit"></i>
                        </a>
                        <a class="btn btn-warning delete" 
                            data-id="@building.BuildingId"
                            data-controller="Building"
                            data-action="Delete"
                            data-body-message="Are you sure you want to delete this building?">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
