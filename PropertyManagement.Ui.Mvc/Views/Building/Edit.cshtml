            <label asp-for="BuildingName"></label>
            <input type="text" class="form-control" asp-for="BuildingName" />
        </div>

        <div class="row">
            <div class="col-sm-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Address</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label asp-for="AddressLine1"></label>
                            <input type="text" class="form-control" asp-for="AddressLine1" />
                        </div>
                        <div class="form-group">
                            <label asp-for="AddressLine2"></label>
                            <input type="text" class="form-control" asp-for="AddressLine2" />
