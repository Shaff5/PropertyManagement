                        <div class="form-group">
                            <label asp-for="LastUpdatedOn"></label>
                            <input type="text" class="form-control" asp-for="LastUpdatedOn" />
                        </div>
                        <div class="form-group">
                            <label asp-for="LastUpdatedBy"></label>
                            <input type="text" class="form-control" asp-for="LastUpdatedBy" />
                        </div>
                    </div>
                </div>
            </div>
