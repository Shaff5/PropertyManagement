@using PropertyManagement.Domain
@using PropertyManagement.Ui.Mvc.Models.Building

@model BuildingViewModel
@{
}

<form>
    <div>
        <div class="page-header">
            <h1>Edit Building</h1>
        </div>

        <button class="btn btn-success" asp-action="Save">
            Save
        </button>
        <button class=" = btn btn-primary" asp-controller="Building" asp-action="Index">
            Cancel
        </button>

        <input type="hidden" asp-for="BuildingId" />

        <div class="form-group">
            <label asp-for="BuildingName"></label>
            <input class="form-control" asp-for="BuildingName" />
        </div>

        <div class="row">
            <div class="col-sm-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Address</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label asp-for="AddressLine1"></label>
                            <input class="form-control" asp-for="AddressLine1" />
                        </div>
                        <div class="form-group">
                            <label asp-for="AddressLine2"></label>
                            <input class="form-control" asp-for="AddressLine2" />
                        </div>
                         <div class="form-group">
                             <label asp-for="AddressLine3"></label>
                             <input class="form-control" asp-for="AddressLine3" />
                         </div>
                         <div class="form-group">
                             <label asp-for="City"></label>
                             <input class="form-control" asp-for="City" />
                         </div>
                         <div class="form-group">
                             <label asp-for="State"></label>
                             <select class="form-control" asp-for="State" asp-items="Model.States"></select>
                         </div>
                         <div class="form-group">
                             <label asp-for="ZipCode"></label>
                             <input class="form-control" asp-for="ZipCode" />
                         </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Financials</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label asp-for="PurchaseDate"></label>
                            <div class="input-group">
                                <input class="form-control" asp-for="PurchaseDate" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="PurchasePrice"></label>
                            <input type="text" class="form-control" asp-for="PurchasePrice" />
                        </div>
                        <label asp-for="SellDate"></label>
                        <div class="input-group">
                            <input class="form-control" asp-for="SellDate" />
                        </div>
                        <div class="form-group">
                            <label asp-for="SellPrice"></label>
                            <input type="text" class="form-control" asp-for="SellPrice" />
                        </div>
                        <div class="form-group">
                            <label asp-for="NumberOfUnits"></label>
                            <input type="text" class="form-control" asp-for="NumberOfUnits" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">System Info</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label asp-for="CreatedOn"></label>
                            <input type="text" class="form-control" asp-for="CreatedOn" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="CreatedBy"></label>
                            <input type="text" class="form-control" asp-for="CreatedBy" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="LastUpdatedOn"></label>
                            <input type="text" class="form-control" asp-for="LastUpdatedOn" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="LastUpdatedBy"></label>
                            <input type="text" class="form-control" asp-for="LastUpdatedBy" disabled />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
