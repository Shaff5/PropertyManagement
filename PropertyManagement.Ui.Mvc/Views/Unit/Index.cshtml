@using PropertyManagement.Domain

@model IEnumerable<Unit>
@{
    ViewData["Title"] = "Units";
}

<form>
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-xs-12">
            <button class="btn" asp-action="Edit">
                Add Unit
            </button>
        </div>
        <button type="button" id="btnRecycleBin" class="btn">
            Recycle Bin
        </button>
        <a class="btn" asp-action="Download">
            Download
        </a>
    </div>

    <table class='table'>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Building Name</th>
                <th>Square Footage</th>
                <th>Bedrooms</th>
                <th>Bathrooms</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var unit in Model)
            {
                <tr>
                    <td>@unit.UnitId</td>
                    <td>@unit.UnitName</td>
                    <td>@unit.BuildingName</td>
                    <td>@unit.SquareFootage</td>
                    <td>@unit.NumberOfBedrooms</td>
                    <td>@unit.NumberOfBathrooms</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id=@unit.UnitId>
                            <i class="fa fa-edit"></i>
                        </a>
                        <a class="btn btn-warning delete"
                           data-id="@unit.UnitId"
                           data-controller="Unit"
                           data-action="Delete"
                           data-body-message="Are you sure you want to delete this unit?">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
