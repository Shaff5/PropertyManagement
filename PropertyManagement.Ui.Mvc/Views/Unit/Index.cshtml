@using PropertyManagement.Domain

@model IEnumerable<Unit>
@{
    ViewData["Title"] = "Units";
}

<form>
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-xs-12">
            <button class="btn" asp-action="Edit">
                Add Unit
            </button>
        </div>
        <button type="button" id="btnRecycleBin" class="btn">
            Recycle Bin
        </button>
        <a class="btn" asp-action="Download">
            Download
        </a>
    </div>

    <div class="table-responsive">
        <table class='table'>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Building Name</th>
                    <th>Square Footage</th>
                    <th>Bedrooms</th>
                    <th>Bathrooms</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unit in Model)
                {
                    <tr>
                        <td>@unit.UnitId</td>
                        <td class="text-nowrap">@unit.UnitName</td>
                        <td class="text-nowrap">@unit.BuildingName</td>
                        <td class="text-nowrap">@unit.SquareFootage</td>
                        <td class="text-nowrap">@unit.NumberOfBedrooms</td>
                        <td class="text-nowrap">@unit.NumberOfBathrooms</td>
                        <td class="btn-group">
                            <a class="btn btn-primary mr-2" asp-action="Edit" asp-route-id=@unit.UnitId>
                                <i class="fa fa-edit"></i>
                            </a>
                            <a class="btn btn-primary delete"
                               href="#"
                               data-id="@unit.UnitId"
                               data-controller="Unit"
                               data-action="Delete"
                               data-body-message="Are you sure you want to delete this unit?">
                                <i class="fa fa-trash delete"
                                   data-id="@unit.UnitId"
                                   data-controller="Unit"
                                   data-action="Delete"
                                   data-body-message="Are you sure you want to delete this unit?">
                                </i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
